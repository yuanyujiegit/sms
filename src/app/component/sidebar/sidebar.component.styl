.sidebar
  width 250px
  min-height 200px
  float left

  .sidebar-admin
    width 100%
    height 120px
    border-bottom 1px solid #eee
    padding 35px 30px

    .admin-img
      width 50px
      height 50px
      float left
      border-radius 50%
      background url(../../../assets/images/pic.png)
      background-size 100%

    .admin-text
      width 125px
      height 50px
      margin-left 10px
      float left

      .text1
        font-size 16px
        color #00a2ff
        margin 2px 0
      .text2
        font-size 14px
        color #aaa

  .sidebar-container
    padding-bottom 20px
    color #888
    .title
      font-size 16px
      .anticon
        font-size 14px
        margin 0 30px 0 10px


/*子组件样式*/
:host ::ng-deep
  .ant-menu
    border-right none
  .ant-menu-submenu-title,.ant-menu-item
    border-bottom 1px solid #eee
  .ant-menu-item
    padding-left 82px!important
    line-height 32px












