/* You can add global styles to this file, and also import other style files */
html, body, a, button, input, select, textarea
  font: 12px/1.5 'Microsoft Yahei', tahoma, arial, 'Hiragino Sans GB', '\5b8b\4f53', sans-serif;
  color #666
body
  min-width 1280px
  background-color #FFF
  font-size 16px

audio, canvas, img, video, i
  vertical-align middle

.iconfont
  color #333

a
  text-decoration: none
  &:hover
    text-decoration: none

  &.none, &.none:hover
    border: 0 none
    outline: none
    -webkit-appearance: none
    text-decoration: none

input[disabled]
  background-color #eaeaea
  color #cccccc
  cursor no-drop !important

body,
div,
dl,
dt,
dd,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
pre,
code,
form,
fieldset,
legend,
input,
textarea,
p,
blockquote,
th,
td
  margin 0
  padding 0

table
  border-collapse collapse
  border-spacing 0

fieldset,
img
  border 0

address,
caption,
cite,
code,
dfn,
em,
strong,
th,
var
  font-style normal
  font-weight normal

ol,
ul
  list-style none


caption,
th
  text-align left

h1,
h2,
h3,
h4,
h5,
h6
  font-size 100%
  font-weight normal

q:before,
q:after
  content ''

abbr,
acronym
  border 0
  font-variant normal

/* to preserve line-height and selector appearance */
sup
  vertical-align text-top

sub
  vertical-align text-bottom

input,
textarea,
select
  font-family inherit
  font-size inherit
  font-weight inherit
*
  font-size 100% /*to enable resizing for IE*/

/*because legend doesn't inherit in IE */
legend
  color #000


